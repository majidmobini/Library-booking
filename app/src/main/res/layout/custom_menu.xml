<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_menu"
        android:padding="16dp"

        android:layout_margin="36dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btnText"
            android:background="@drawable/buttoms_back"
            android:text="Button" />

        <Button
            android:id="@+id/bt2"
            android:visibility="gone"
            style="@style/btnText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttoms_back"
            android:text="Button" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/btnText"
            android:visibility="gone"
            android:background="@drawable/buttoms_back"
            android:text="Button" />

        <Button
            android:id="@+id/bt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            style="@style/btnText"
            android:background="@drawable/buttoms_back"
            android:text="Button" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btnText"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttoms_back"
            android:text="Button" />
    </LinearLayout>
</LinearLayout>